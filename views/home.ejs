<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/4f027a41bf.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/home.css" />
    <title><%= title%></title>
  </head>
  <body>
    <div class="main">
      <div class="container">
        <div class="heading">
          <h1>TODO App</h1>
          <i class="fa-solid fa-list-check"></i>
        </div>

        <form action="/create-todo" method="POST">
          <div id="description">
            <h2>DESCRIPTION</h2>
            <input
              type="text"
              name="task"
              placeholder="What do you need to do ?"
              required
            />
          </div>

          <!-- common container for category and due-date -->

          <div class="category-duedate-container">
            <!-- 1) category container -->

            <div class="category">
              <h2>CATEGORY</h2>
              <select name="category" id="selectText">
                <option value="none">Choose a category</option>
                <option value="Work">Work</option>
                <option value="Personal">Personal</option>
                <option value="School">School</option>
                <option value="Internship">Internship</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- 2) due-date container -->

            <div class="due-date">
              <h2>DUE DATE</h2>
              <input id="task-duedate" name="date" type="date" required />
            </div>
          </div>

          <!-- now code for ADD TASK button and DELETE TASK button  -->
          <div class="btn-container">
            <button onclick="addTask()" id="addTask-btn" type="submit">
              <i class="fa-solid fa-plus"></i> ADD TASK
            </button>

            <button id="deleteTask-btn">
              <i class="fa-solid fa-trash-can"></i>DELETE TASK
            </button>
          </div>

          <!-- modifying an code for ejs that i wrote mistakely -->

          <!-- creating an tasklist container  -->

          <!-- --------------------------------------------------------- -->

          <!-- <i class="fa-solid fa-circle-check"></i> -->

          <ul id="ul" class="list-container">
            <% for(let i of todo_list) {%>

            <li id="list-tag">
              <!-- <div id="checkUncheck" class="check demo">
                <i class="fa-solid fa-check"></i>
              </div> -->

              <div class="task-content">
                <h2><%= i.task%></h2>
                <div class="date-in-list">
                  <i class="fa-solid fa-calendar-days"></i>
                  <p id="deadline"><%=i.date%></p>
                </div>
              </div>

              <div id="category-btns" class="work-btn">
                <p id="p"><%= i.category%></p>
              </div>
            </li>

            <%} %>
          </ul>
          <!-- ---------------------------------------------------------------- -->
        </form>
      </div>
    </div>

    <script src="/home.js"></script>
  </body>
</html>
